<% include ./partials/header %>
	
	<form class="ui form">
		<div class="field">
		    <label>Email</label>
		    <input name="email" placeholder="Email" type="email">
		</div>
  	</form>

  	<div class="ui container blogBody loginForm">
		<h1 style="text-align:center ;font-size:3em"> Password-Reset </h1>
		<div class="ui raised segment">
		<div style="margin:2%">
		<form class="ui form"  action="/reset/<%=token%>" method="POST">
			<div class="field">
				<label>New Password</label>
				<div class="ui right icon input">
					<input type ="password" name="password" placeholder="New Password">
				</div>
			</div>
			<div class="field">
				<label>Confirm Password</label>
				<div class="ui right icon input">
					<input type ="password" name="confirm" placeholder="Confirm Password">
				</div>
			</div>
			<button class="ui button green" type="submit">Reset Password</button>
		</form>
		<br>
	</div>
</div>
<% include ./partials/footer %>