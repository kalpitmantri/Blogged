<div class="ui container blogBody loginForm">
	<h1 style="text-align:center ;font-size:3em"> Edit Comment </h1>
	<div class="ui raised segment">
		<div style="margin:2%">
		<form class="ui form"  action="/blogs/<%=blogId%>/comments/<%=comment.id%>?_method=PUT" method="POST">
			<div class="field">
				<label>Text</label>
				<div class="ui right icon input">
					<i class="user icon"></i>
					<input type ="text" name="comment[text]" value="<%=comment.text%>">
				</div>
			</div>
			<button class="ui button green" type="submit">Submit</button>
		</form>
		</div>
	</div>
</div>

